        <TextBlock HorizontalAlignment="Left" Margin="115,50,0,0" TextWrapping="Wrap" Text="Width" VerticalAlignment="Top" Height="30" Width="50"/>
        <TextBlock HorizontalAlignment="Left" Margin="115,90,0,0" TextWrapping="Wrap" Text="Height" VerticalAlignment="Top" Height="30" Width="50"/>
        <TextBlock HorizontalAlignment="Left" Margin="115,130,0,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Height="30" Width="50"/>

    </Grid>
